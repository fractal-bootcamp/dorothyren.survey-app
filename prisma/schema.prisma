generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//surveys
//questions -> surveys
//answers -> questions

//Surveys
model Survey {
  // survey fields
  id    Int    @id @default(autoincrement())
  title String

  // relationships
  questions Question[]
}

model Question {
  id           Int    @id @default(autoincrement())
  questionText String
  surveyId     Int

  answers Answer[]
  Survey  Survey   @relation(fields: [surveyId], references: [id])
}

model Answer {
  id         Int      @id @default(autoincrement())
  answerText String
  questionId Int
  Question   Question @relation(fields: [questionId], references: [id])
}
